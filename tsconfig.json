{
    "compilerOptions": {
        "outDir": "./dist/out-tsc",
        "sourceMap": true,
        "declaration": false,
        "moduleResolution": "node",
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "target": "es5",
        "lib": [
            "es2017",
            "dom"
        ],
        "baseUrl": "src/",
        "paths": {
            "@shared": ["app/@shared"],
            "@shared/*": ["app/@shared/*"],
            "@core": ["app/@core/"],
            "@core/*": ["app/@core/*"],
            "@env/*": ["environments/*"],
            "@layout": ["app/layout/"],
            "@layout/*": ["app/layout/*"],
            "@routes": ["app/routes/"],
            "@routes/*": ["app/routes/*"]
        }
    }
}
